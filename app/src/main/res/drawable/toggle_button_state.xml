<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#ddff7f50"
                android:endColor="#ddff0000"
                android:angle="270" />
            <corners
                android:radius="13dp"/>
            <stroke
                android:color="#c0c0c0"
                android:width="1dp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#dd1e90ff"
                android:endColor="#dd0000cd"
                android:angle="270" />
            <corners
                android:radius="13dp"/>
            <stroke
                android:color="#c0c0c0"
                android:width="1dp"/>
        </shape>
    </item>
</selector>